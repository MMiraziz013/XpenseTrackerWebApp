@model XpenseTrackerWebApp.Models.Category

@{
    ViewData["Title"] = "Create";
    IDictionary<string, object> submit = new Dictionary<string, object>();
    submit.Add("type", "submit");
}

                                           @*!!!!!!!!!!EDIT AND CREATE BUTTONS ARE NOT WORKING!!!!!!!!!!*@

<div class="row justify-content-center">
    <div class="col-md-7">
        <div class="widget  p-5">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="CategoryId" value="CategoryId" />
                <div class="mb-3">
                    <div class='e-btn-group custom-rbt-group'>
                        <input type="radio" id="radioleft" name="Type" value="Expense" checked="@(Model.Type =="Expense")" />
                        <label class="e-btn" for="radioleft">Expense</label>
                        <input type="radio" id="radioright" name="Type" value="Income" checked="@(Model.Type =="Income")" />
                        <label class="e-btn" for="radioright">Income</label>
                    </div>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <ejs-textbox id="title" placeholder="Title" value="@Model.Title" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="icon" placeholder="Icon" value="@Model.Icon" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
                
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
